def for_loop_game():
    score = 0
    print("Welcome to the For Loop Game! You will be asked 100 questions.")
    for i in range(1, 101):
        answer = input(f"Question {i}: What is {i} + 1? ")
        if answer.strip() == str(i + 1):
            print("Correct!")
            score += 1
        else:
            print(f"Wrong. The correct answer was {i + 1}.")
    print(f"Game over! Your score: {score}/100")

if __name__ == "__main__":
    for_loop_game()
